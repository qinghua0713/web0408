view{
    box-sizing: border-box;
}
.cover_container{
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    z-index: 150;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: flex-end;
}
.context{
    font-size: 24rpx;
    color: #333333;
    line-height: 1.7;
}  
.line_4{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
}
.zt_color{
    color: #a6d9e1;
  }
  .current_tab::before{
    content: "";
    position: absolute;
    bottom: -14rpx;
    left: 0;
    width: 100%;
	height: 2rpx;
    border-bottom: solid 4rpx #e9a431;
    
}
.current_color{
